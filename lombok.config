# Configure lombok features

# Enable Lombok config stop bubbling
config.stopBubbling = true

# Add @Generated annotation to lombok-generated code
lombok.addLombokGeneratedAnnotation = true

# Mark fields as final by default to avoid mutable state 
lombok.fieldDefaults.defaultPrivate = true

# Respect existing annotations
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Qualifier
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Value
lombok.copyableAnnotations += org.springframework.context.annotation.Lazy
lombok.copyableAnnotations += javax.annotation.Nullable
lombok.copyableAnnotations += jakarta.annotation.Nullable

# Builder patterns
lombok.anyConstructor.addConstructorProperties = true
lombok.builder.className = {0}Builder

# For defensive copying with @Data
lombok.toBuilder.defaultValue = true

# Null checks
lombok.nonNull.exceptionType = IllegalArgumentException

# Add the @EqualsAndHashCode.Include annotation to instance fields
lombok.equalsAndHashCode.doNotUseGetters = true

# Provide better integration with SpotBugs and other static analysis tools
lombok.extern.findbugs.addSuppressFBWarnings = true 