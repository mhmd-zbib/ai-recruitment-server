<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} | %-5level | %-20.20c{1}.%M() | %msg%n</Property>
        <Property name="JSON_PATTERN">
            {"timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}","level":"%level","service":"%c{1}","event":"%X{event}","data":%X{data},"thread":"%t"%notEmpty{,"error":"%exception"}}%n
        </Property>
    </Properties>

    <Appenders>
        <!-- Console Appender for Human-Readable Format -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- Rolling File Appender for JSON Format -->
        <RollingFile name="JsonFileAppender"
                     fileName="logs/recruitment-pipeline.json"
                     filePattern="logs/recruitment-pipeline-%d{yyyy-MM-dd}-%i.json.gz">
            <PatternLayout pattern="${JSON_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root>
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="JsonFileAppender"/>
        </Root>
    </Loggers>
</Configuration>