# HireSync API Production Environment Configuration
# Template for production deployment
# Copy this file to .env and update with real production values

#==============================================================================
# ESSENTIAL DATABASE CONFIGURATION
#==============================================================================
# Primary database connection variables
POSTGRES_HOST=your-production-db-host
POSTGRES_PORT=5432
POSTGRES_DB=hiresync
POSTGRES_USER=hiresync
POSTGRES_PASSWORD=strong-production-password

# Application profile - Always use prod for production
SPRING_PROFILES_ACTIVE=prod

#==============================================================================
# SECURITY CONFIGURATION
#==============================================================================
# Security - IMPORTANT: Use secure values in production!
JWT_SECRET=replace-with-secure-random-value-min-32-chars-long
JWT_ISSUER=hiresync-prod
JWT_AUDIENCE=hiresync-app
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

#==============================================================================
# APPLICATION CONFIGURATION
#==============================================================================
# CORS Configuration - Update with your frontend domain
CORS_ORIGINS=https://your-production-frontend-domain.com

# Port configuration
PORT=8080
MANAGEMENT_PORT=8081

#==============================================================================
# OPTIONAL PERFORMANCE CONFIGURATION
#==============================================================================
# Connection Pool Settings
DB_MAX_POOL_SIZE=10
DB_MIN_IDLE=5

#==============================================================================
# FEATURE FLAGS
#==============================================================================
# Feature settings for production
DEBUG_MODE=false
ENABLE_EMAIL=true
ENABLE_FILE_UPLOAD=true