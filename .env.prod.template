# HireSync Production Environment Configuration
# Use this as a template for production deployment

#==============================================================================
# ESSENTIAL CONFIGURATION
#==============================================================================
# Application profile
SPRING_PROFILES_ACTIVE=prod

# Database settings - Required (choose one of the three patterns below)
# Pattern 1: PostgreSQL variables (traditional)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=hiresync
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_to_secure_password

# Pattern 2: Spring datasource configuration (direct)
# SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/hiresync
# SPRING_DATASOURCE_USERNAME=postgres
# SPRING_DATASOURCE_PASSWORD=change_this_to_secure_password

# Pattern 3: JDBC URL style (for platforms like Heroku, Render)
# JDBC_DATABASE_URL=jdbc:postgresql://postgres:5432/hiresync
# JDBC_DATABASE_USERNAME=postgres
# JDBC_DATABASE_PASSWORD=change_this_to_secure_password

# Security settings - Required
JWT_SECRET=replace_this_with_a_secure_secret_key_minimum_32_chars
JWT_ISSUER=hiresync-prod
JWT_AUDIENCE=hiresync-app
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# CORS settings
CORS_ORIGINS=https://yourdomain.com

#==============================================================================
# OPTIONAL CONFIGURATION
#==============================================================================
# Server settings
PORT=8080

# Connection pool settings - Only override if needed
DB_MAX_POOL_SIZE=10
DB_MIN_IDLE=2

# Feature flags - Production appropriate defaults
DEBUG_MODE=false
ENABLE_EMAIL=true
ENABLE_FILE_UPLOAD=true

# API Documentation - Disabled by default in production
SPRINGDOC_ENABLED=false
SWAGGER_UI_ENABLED=false

# Actuator health info level
ACTUATOR_DETAILED_HEALTH=never

# Docker image settings (for container deployment)
DOCKER_IMAGE=hiresync
DOCKER_TAG=latest

# Hibernate specific settings
JPA_DDL_AUTO=validate

# Server specific settings
SERVER_COMPRESSION_ENABLED=true
SERVER_HTTP2_ENABLED=true

# Application specific settings
HIRESYNC_FEATURES_DEBUG_MODE=false

# Apply database index fix (set to true if needed)
APPLY_INDEX_FIX=false 