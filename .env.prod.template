# HireSync Production Environment Configuration
# Use this as a template for production deployment

#==============================================================================
# ESSENTIAL CONFIGURATION
#==============================================================================
# Application profile
SPRING_PROFILES_ACTIVE=prod

# Database settings - Required
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=hiresync
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_to_secure_password

# Security settings - Required
JWT_SECRET=replace_this_with_a_secure_secret_key_minimum_32_chars
JWT_ISSUER=hiresync-prod
JWT_AUDIENCE=hiresync-app
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# CORS settings
CORS_ORIGINS=https://yourdomain.com

#==============================================================================
# OPTIONAL CONFIGURATION
#==============================================================================
# Server settings
PORT=8080

# Connection pool settings - Only override if needed
DB_MAX_POOL_SIZE=10
DB_MIN_IDLE=2

# Feature flags - Production appropriate defaults
DEBUG_MODE=false
ENABLE_EMAIL=true
ENABLE_FILE_UPLOAD=true

# API Documentation - Disabled by default in production
SPRINGDOC_ENABLED=false
SWAGGER_UI_ENABLED=false

# Actuator health info level
ACTUATOR_DETAILED_HEALTH=never

# Docker image settings (for container deployment)
DOCKER_IMAGE=hiresync
DOCKER_TAG=latest

# JDBC connection strings (compatibility with both config styles)
JDBC_DATABASE_URL=jdbc:postgresql://${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
JDBC_DATABASE_USERNAME=${POSTGRES_USER}
JDBC_DATABASE_PASSWORD=${POSTGRES_PASSWORD}

# Spring application settings
SPRING_DATASOURCE_URL=jdbc:postgresql://${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
SPRING_DATASOURCE_USERNAME=${POSTGRES_USER}
SPRING_DATASOURCE_PASSWORD=${POSTGRES_PASSWORD}
SPRING_JPA_HIBERNATE_DDL-AUTO=validate

# Logging settings
LOG_LEVEL_ROOT=WARN
LOG_LEVEL_APP=INFO
LOG_LEVEL_SQL=WARN

# Server settings
SERVER_COMPRESSION_ENABLED=true
SERVER_HTTP2_ENABLED=true

# Application specific settings
HIRESYNC_FEATURES_DEBUG_MODE=false

# Apply database index fix (set to true if needed)
APPLY_INDEX_FIX=false 