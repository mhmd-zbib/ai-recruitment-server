<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="error"/>
    <property name="fileExtensions" value="java, properties, xml"/>

    <!-- Tabs are not allowed, use spaces -->
    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>

    <!-- Line length check -->
    <module name="LineLength">
        <property name="fileExtensions" value="java"/>
        <property name="max" value="120"/>
        <property name="ignorePattern" value="^package.*|^import.*|a href|href|http://|https://|ftp://"/>
    </module>

    <module name="TreeWalker">
        <!-- Basic styling rules -->
        <module name="OuterTypeFilename"/> <!-- Class name must match file name -->
        <module name="AvoidStarImport"/> <!-- No wildcard imports -->
        <module name="OneTopLevelClass"/> <!-- One public class per file -->
        <module name="NoLineWrap"/> <!-- No line wraps for package/import statements -->
        
        <!-- Braces and whitespace -->
        <module name="NeedBraces"/> <!-- Always use braces -->
        <module name="LeftCurly"/> <!-- Left brace placement -->
        <module name="RightCurly"/> <!-- Right brace placement -->
        <module name="WhitespaceAround">
            <property name="allowEmptyConstructors" value="true"/>
            <property name="allowEmptyMethods" value="true"/>
            <property name="allowEmptyTypes" value="true"/>
            <property name="allowEmptyLoops" value="true"/>
        </module>
        <module name="MethodParamPad"/> <!-- No space before method parameters -->
        <module name="NoWhitespaceBefore">
            <property name="tokens" value="COMMA, SEMI, POST_INC, POST_DEC, DOT"/>
            <property name="allowLineBreaks" value="true"/>
        </module>
        <module name="ParenPad"/> <!-- No spaces inside parentheses -->
        
        <!-- Naming conventions -->
        <module name="PackageName">
            <property name="format" value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
        </module>
        <module name="TypeName"/> <!-- UpperCamelCase for classes -->
        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <module name="ParameterName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9_]*$"/>
        </module>
        
        <!-- Style-focused rules -->
        <module name="ArrayTypeStyle"/> <!-- [] after type, not variable -->
        <module name="UpperEll"/> <!-- Use 'L' not 'l' for long literals -->
        <module name="ModifierOrder"/> <!-- Standard Java modifier order -->
    </module>
</module>