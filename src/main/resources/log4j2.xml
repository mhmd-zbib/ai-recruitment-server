<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <!-- Human-readable terminal log pattern -->
        <Property name="TERMINAL_PATTERN">%d{HH:mm:ss.SSS} %highlight{%-5p}{FATAL=bright_red, ERROR=red, WARN=yellow, INFO=blue, DEBUG=green, TRACE=white} [%c{1}] [%X{correlationId}] [%X{userId}] %m%n</Property>
        
        <!-- Structured log pattern for file logs -->
        <Property name="STRUCTURED_PATTERN">{
  "timestamp": "%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}",
  "level": "%p",
  "logger": "%c{1}",
  "correlationId": "%X{correlationId}",
  "requestId": "%X{requestId}",
  "userId": "%X{userId}",
  "sessionId": "%X{sessionId}",
  "tenantId": "%X{tenantId}",
  "class": "%X{class}",
  "method": "%X{method}",
  "path": "%X{path}",
  "httpMethod": "%X{method}",
  "clientIp": "%X{clientIp}",
  "status": "%X{status}",
  "duration": "%X{duration}",
  "executionTime": "%X{executionTime}",
  "exception": "%X{exception}",
  "errorMessage": "%X{errorMessage}",
  "message": "%enc{%m}{JSON}"
}%n</Property>
        
        <Property name="APP_LOG_ROOT">logs</Property>
    </Properties>

    <Appenders>
        <!-- Console appender with human-readable format -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${TERMINAL_PATTERN}" disableAnsi="false"/>
            <ThresholdFilter level="INFO"/>
        </Console>

        <!-- Application log file with structured format -->
        <RollingRandomAccessFile name="AppLogFile" fileName="${APP_LOG_ROOT}/hiresync-app.log" 
                     filePattern="${APP_LOG_ROOT}/hiresync-app-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${STRUCTURED_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="100 MB" />
            </Policies>
            <DefaultRolloverStrategy max="30">
                <Delete basePath="${APP_LOG_ROOT}" maxDepth="1">
                    <IfFileName glob="hiresync-app-*.log.gz" />
                    <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <!-- Error log file -->
        <RollingRandomAccessFile name="ErrorLogFile" fileName="${APP_LOG_ROOT}/hiresync-errors.log" 
                     filePattern="${APP_LOG_ROOT}/hiresync-errors-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${STRUCTURED_PATTERN}"/>
            <ThresholdFilter level="ERROR"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="30">
                <Delete basePath="${APP_LOG_ROOT}" maxDepth="1">
                    <IfFileName glob="hiresync-errors-*.log.gz" />
                    <IfLastModified age="60d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>
        
        <!-- Async wrappers for performance -->
        <Async name="AsyncAppLog" bufferSize="1024">
            <AppenderRef ref="AppLogFile"/>
        </Async>
        
        <Async name="AsyncErrorLog" bufferSize="256">
            <AppenderRef ref="ErrorLogFile"/>
        </Async>
    </Appenders>

    <Loggers>
        <!-- Default logger configuration -->
        <Root level="INFO">
            <AppenderRef ref="Console" />
            <AppenderRef ref="AsyncAppLog" />
            <AppenderRef ref="AsyncErrorLog" />
        </Root>

        <!-- Framework loggers -->
        <Logger name="org.springframework" level="INFO" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="AsyncAppLog" />
        </Logger>

        <Logger name="org.hibernate" level="WARN" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="AsyncAppLog" />
        </Logger>
        
        <!-- Application loggers -->
        <Logger name="com.zbib.hiresync" level="DEBUG">
            <AppenderRef ref="Console" />
            <AppenderRef ref="AsyncAppLog" />
            <AppenderRef ref="AsyncErrorLog" />
        </Logger>
    </Loggers>
</Configuration>