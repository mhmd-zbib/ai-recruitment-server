# ===== DATABASE CONFIGURATION =====
# These settings control the database connection
DB_HOST=localhost
DB_PORT=5544
DB_NAME=hiresync_db
DB_USERNAME=hiresync_user
DB_PASSWORD=hiresync_password

# ===== JWT CONFIGURATION =====
JWT_SECRET=your-jwt-secret-key-should-be-at-least-256-bits-long
JWT_EXPIRATION=86400000

# ===== APPLICATION CONFIGURATION =====
PORT=8080

# ===== POOL CONFIGURATION =====
DB_MAX_POOL_SIZE=10
DB_MIN_IDLE=5

# ===== JPA CONFIGURATION =====
JPA_DDL_AUTO=validate

# ===== LOGGING LEVELS =====
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO
LOG_LEVEL_SQL=INFO

# ===== OPTIONAL SERVICES =====

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_ENABLED=false

# RabbitMQ Configuration 
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_ENABLED=false
RABBITMQ_EXCHANGE=hiresync.logs.exchange
RABBITMQ_ROUTING_KEY=hiresync.logs.routing.key
RABBITMQ_QUEUE=hiresync.logs.queue

# ===== ENVIRONMENT NOTES =====
# For local development:
# - Keep DB_HOST as localhost to connect to containerized database
#
# For production environment:
# - Set DB_HOST=postgres when running with docker-compose.prod.yaml
# - Set DB_PORT=5432 when running with docker-compose.prod.yaml 