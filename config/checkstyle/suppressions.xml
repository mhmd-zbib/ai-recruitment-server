<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">
<suppressions>
    <!-- Suppress checks for generated code -->
    <suppress files="[\\/]target[\\/]" checks=".*"/>
    <suppress files="[\\/]build[\\/]" checks=".*"/>
    
    <!-- Suppress checks for test resources -->
    <suppress files="[\\/]src[\\/]test[\\/]resources[\\/]" checks=".*"/>
    
    <!-- Suppress checks for test classes -->
    <suppress files="[\\/]src[\\/]test[\\/]java[\\/]" checks="MethodLength|CyclomaticComplexity|ParameterNumber|ClassFanOutComplexity|ClassDataAbstractionCoupling|DesignForExtension|FinalParameters"/>
    
    <!-- Suppress line length checks for complex logic -->
    <suppress files=".*Service\.java" checks="LineLength" lines="200-9999"/>
    
    <!-- Data transfer objects are expected to have many fields/getters/setters -->
    <suppress files="[\\/]dto[\\/]|[\\/]entity[\\/]|[\\/]model[\\/]" checks="ClassDataAbstractionCoupling|ClassFanOutComplexity|VisibilityModifier|MethodCount"/>
    
    <!-- Controllers may have more dependencies due to business requirements -->
    <suppress files="[\\/]controller[\\/]|[\\/]resource[\\/]|[\\/]rest[\\/]" checks="ClassDataAbstractionCoupling|ClassFanOutComplexity"/>
    
    <!-- Config classes usually wire many dependencies -->
    <suppress files="[\\/]config[\\/]|.*Configuration\.java" checks="ClassDataAbstractionCoupling|ClassFanOutComplexity|HideUtilityClassConstructor"/>
    
    <!-- Main application class -->
    <suppress files="Application\.java|.*Application\.java" checks="HideUtilityClassConstructor"/>
    
    <!-- Repository interfaces and implementations -->
    <suppress files="Repository\.java|[\\/]repository[\\/]" checks="InterfaceIsType"/>
    
    <!-- Exception classes need mutable fields and state -->
    <suppress files="Exception\.java|[\\/]exception[\\/]" checks="MutableException"/>
    
    <!-- Constants classes are allowed to have many static fields -->
    <suppress files="Constants\.java|[\\/]constant[\\/]" checks="VisibilityModifier|HideUtilityClassConstructor"/>
</suppressions> 