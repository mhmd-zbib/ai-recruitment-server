# HireSync API Environment Configuration Example
# Copy this file to .env and modify as needed

#==============================================================================
# ESSENTIAL CONFIGURATION (Required for all environments)
#==============================================================================
# Application profile (local, dev, test, prod)
SPRING_PROFILES_ACTIVE=local

# Time zone
TZ=UTC

# Database connection details - Required
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hiresync
DB_USER=hiresync
DB_PASSWORD=hiresync

# Security settings - Required (use strong values in production)
JWT_SECRET=your-256-bit-secret-key-must-be-at-least-32-characters
JWT_ISSUER=hiresync-local
JWT_AUDIENCE=hiresync-app
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# CORS settings
CORS_ORIGINS=http://localhost:3000

#==============================================================================
# OPTIONAL CONFIGURATION (Has sensible defaults)
#==============================================================================
# Server configuration
PORT=8080

# Connection pool settings - Only override if needed
DB_MAX_POOL_SIZE=5
DB_MIN_IDLE=2

# API Documentation - Enabled by default in non-prod
SPRINGDOC_ENABLED=true
SWAGGER_UI_ENABLED=true

# Management endpoints
ACTUATOR_DETAILED_HEALTH=always

# Feature flags - Appropriate defaults per environment
DEBUG_MODE=true
ENABLE_EMAIL=false
ENABLE_FILE_UPLOAD=true

#==============================================================================
# ENVIRONMENT NOTES
#==============================================================================
# Environment profile determines which application-{profile}.yaml to use:
# - local: Development environment with dev tools and H2 database
# - test: For automated tests with in-memory database
# - prod: Production environment with optimized settings

# Database:
# Set DB_* variables for direct PostgreSQL connection 
# These are used to build the JDBC URL automatically

# JWT Settings:
# - SECRET: Should be at least 32 characters, randomly generated for production
# - EXPIRATION: Token lifetime in milliseconds (default: 24 hours)
# - REFRESH_EXPIRATION: Refresh token lifetime (default: 7 days)

# Feature flags:
# - DEBUG_MODE: Enables additional debug features (false in prod)
# - ENABLE_EMAIL: Enables email sending functionality
# - ENABLE_FILE_UPLOAD: Enables file upload functionality

#==============================================================================
# DEVELOPMENT CONFIGURATION (Not required for production)
#==============================================================================
# Application ports
APP_PORT=8080
DEBUG_PORT=5005

# Docker resources
NETWORK_NAME=hiresync-network
POSTGRES_VOLUME=hiresync-postgres-data
MAVEN_REPO_VOLUME=hiresync-maven-repo

# JWT additional settings
JWT_EXPIRATION=86400000

#==============================================================================
# LOGGING CONFIGURATION
#==============================================================================
# Application logging
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SQL=DEBUG

#==============================================================================
# DOCKER CONFIGURATION
#==============================================================================
# Docker container restart policies
# Options: "no", "on-failure", "always", "unless-stopped"
DB_RESTART_POLICY=unless-stopped

#==============================================================================
# JVM AND MAVEN SETTINGS
#==============================================================================
# JVM options
JAVA_OPTS=-Xms256m -Xmx1024m

# Remote debugging (dev only)
DEBUG_ENABLED=false

#==============================================================================
# FILE STORAGE CONFIGURATION
#==============================================================================
# MinIO configuration (optional)
MINIO_HOST=localhost
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=hiresync
MINIO_ENABLED=false

#==============================================================================
# BUILD CONFIGURATION
#==============================================================================
# Skip tests during build
SKIP_TESTS=false

# Skip verification during deployment
SKIP_VERIFY=false

#==============================================================================
# CI/CD CONFIGURATION
#==============================================================================
# OWASP dependency check API key
NVD_API_KEY=

# CI/CD integrations
SLACK_WEBHOOK=

# ===== ENVIRONMENT NOTES =====
# For local development with Docker:
# - Run ./connect-db.sh to automatically configure and start the application
# - PostgreSQL will be available at localhost:5544
#
# For development environment:
# - Run ./run-dev.sh to start PostgreSQL in Docker and run the application
#
# For production:
# - Run ./run-prod.sh after setting the JDBC_* environment variables
# - Or deploy with docker-compose.prod.yaml for a containerized setup

# Docker resources
NETWORK_NAME=hiresync-network
MAVEN_REPO_VOLUME=hiresync-maven-repo

# Feature flags
DEBUG_MODE=true
ENABLE_EMAIL=false
ENABLE_FILE_UPLOAD=true 