<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">
    
    <!-- Local Maven repository location -->
    <localRepository>${user.home}/.m2/repository</localRepository>
    
    <!-- Server credentials for private repositories and distributionManagement -->
    <servers>
        <!-- Example GitHub Packages Authentication -->
        <server>
            <id>github</id>
            <username>${env.GITHUB_USERNAME}</username>
            <password>${env.GITHUB_TOKEN}</password>
        </server>
        
        <!-- Example Nexus or Artifactory Server -->
        <server>
            <id>hiresync-nexus</id>
            <username>${env.NEXUS_USERNAME}</username>
            <password>${env.NEXUS_PASSWORD}</password>
        </server>
    </servers>
    
    <!-- Proxy settings if needed behind firewall -->
    <proxies>
        <!-- Example proxy configuration (commented out) -->
        <!--
        <proxy>
            <id>optional</id>
            <active>true</active>
            <protocol>http</protocol>
            <host>proxy.company.com</host>
            <port>8080</port>
            <username>proxyuser</username>
            <password>proxypass</password>
            <nonProxyHosts>localhost|127.0.0.1</nonProxyHosts>
        </proxy>
        -->
    </proxies>
    
    <!-- Maven build profiles -->
    <profiles>
        <!-- Default profile with standard settings -->
        <profile>
            <id>default</id>
            <repositories>
                <repository>
                    <id>central</id>
                    <name>Maven Central</name>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <name>Maven Central</name>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
        
        <!-- Development Profile -->
        <profile>
            <id>development</id>
            <properties>
                <maven.test.skip>false</maven.test.skip>
                <spotless.skip>false</spotless.skip>
            </properties>
        </profile>
        
        <!-- CI Profile -->
        <profile>
            <id>ci</id>
            <properties>
                <maven.test.skip>false</maven.test.skip>
                <spotless.skip>false</spotless.skip>
                <jacoco.skip>false</jacoco.skip>
                <pmd.skip>false</pmd.skip>
            </properties>
        </profile>
        
        <!-- GitHub Packages Profile (if needed) -->
        <profile>
            <id>github</id>
            <repositories>
                <repository>
                    <id>github</id>
                    <name>GitHub Packages</name>
                    <url>https://maven.pkg.github.com/zbib/hiresync</url>
                </repository>
            </repositories>
        </profile>
    </profiles>
    
    <!-- Activate default profile -->
    <activeProfiles>
        <activeProfile>default</activeProfile>
    </activeProfiles>
    
    <!-- Maven behavior -->
    <mirrors>
        <!-- Example mirror configuration (commented out) -->
        <!--
        <mirror>
            <id>company-mirror</id>
            <name>Company Maven Mirror</name>
            <url>https://nexus.company.com/repository/maven-public/</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
        -->
    </mirrors>
</settings> 